extends layout

block content
  .row 
    if (me.admin)
      .small-8.columns
        h1 Queue
      .small-4.columns
        .button#clear Clear Queue
    else
      .small-12.columns
        h1 Queue
  .row
    .small-12.columns
      for drink in shwasted._queue
        .panel
          .row
            .small-2.columns
              img(src='#{drink.drink.imageSmall}')
            .small-8.columns
              .row
                h2 #{drink.drink.name}
              .row
                h5 #{drink.user.name}
            .small-2.columns
              if (drink.user.img)
                img(src='#{drink.user.img}')
              else
                img(src='../default_prof.jpg').th


  script.
    $('#clear').click(function(){
      console.log("Clear Queue");
      $.post('/clearQueue');
    })